package iceteroids{	import flash.utils.Timer;	import flash.events.TimerEvent;	import flash.geom.Point;	import sound.UFO;	import flash.media.Sound;	import flash.media.SoundChannel;	import sound.UFOSound;		public class UFO extends GameElement 	{		public var player:Player;		//Declare more instance variables		public var bulletMan:BulletManager;		public var fireTimer:Timer;		public var accuracy:Number;		var UFOMusic:Sound;		var UFOSoundChannel:SoundChannel;						public function UFO(aGame:Game, aPlayer:Player) 		{			// constructor code			super(aGame);			player = aPlayer;								}				public function init(xml:XML)		{			trace(this + " got some XML = " + xml.toXMLString()); 			gotoAndStop("alive");			super.vx = xml.@speed;			super.vy = 0; 			x = stage.stageWidth;			y = Math.random() * stage.stageHeight;			//trace(super.vx);			bulletMan = new BulletManager(game, 10, 9, 30);			accuracy = xml.@accuracy;			//accuracy = 30;			fireTimer = new Timer(2500, 0);			fireTimer.start();			//fireTimer.delay = xml.levels.level.UFO[0].@fireDelay;			fireTimer.delay = 2500;			fireTimer.addEventListener(TimerEvent.TIMER, onFire);			UFOMusic = new UFOSound();			UFOSoundChannel = UFOMusic.play(0, int.MAX_VALUE);		}				//Create a stub		public function onFire(e:TimerEvent):void		{			trace("Timer On Fire: " + e);			var pt:Point = new Point(player.x, player.y).subtract(new Point(x,y));			var rot:Number = Math.atan2(pt.y, pt.x) * 180/Math.PI;			bulletMan.fireBullet(new Point(x,y), rot, vx, vy);								}				public function destroy():void		{			//Remove event listener			fireTimer.removeEventListener(TimerEvent.TIMER, onFire);			fireTimer.stop();			UFOSoundChannel.stop();			gotoAndPlay("death");		}	}	}