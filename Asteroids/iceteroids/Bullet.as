package iceteroids {	import flash.geom.Point;	import flash.media.Sound;	import sound.Laser;		public class Bullet extends GameElement	{		public var age:int;		var laserSound:Sound = new Laser;		public function Bullet(aGame:Game) 		{			// constructor code			super(aGame);		}				//Points have .x and .y properties		public function fire(aPos: Point, aRot:Number, ivx:Number, ivy:Number):void		{			age = 0;			x = aPos.x;			y = aPos.y;			rotation = aRot;			vx = ivx;			vy = ivy;			laserSound.play();		}	}	}