package iceteroids {	import flash.events.*;		public class Asteroid extends GameElement	{		//private var game:Game;		public function Asteroid(agame:Game) 		{			// constructor code			//super();			super(agame);			trace(this + " created");		}				public function init(xml:XML)		{			//properties inherited from DisplayObject			x = Math.random() * stage.stageWidth;			y = Math.random() * stage.stageHeight;			scaleX = .5;			scaleY = .5;			//properties inherited from GameElement			vx = (Math.random() * (xml.@maxSpeed * 2) - xml.@maxSpeed);			vy = (Math.random() * (xml.@maxSpeed * 2) - xml.@maxSpeed);			vr = (Math.random() * (xml.@maxRotation * 2) - xml.@maxRotation);			//addEventListener(destroy);		}				private function animationEnded():void		{			//if parent does not exist			//this asteroid isn't on the stage			if(parent)			{				parent.removeChild(this);			}					}				public function destroy():void		{						//removeEventListener(destroy);			game.destroyAsteroid(this);			play();		}	}	}