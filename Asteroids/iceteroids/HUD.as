package iceteroids {	import flash.display.Sprite;	import flash.text.TextField;		public class HUD extends Sprite	{		//Declare 3 public textfields		public var score_txt: TextField;		public var lives_txt: TextField;		public var message_txt: TextField;		//Declare 2 private int properties		private var score:int = 0;		private var lives: int = 5;				public function HUD(xml:XML) 		{			// constructor code			super();			//Set lives fro mthe xml being passed in			lives = xml.startLives[0];			//Clear message text			message_txt.text = "";			//takeLives(0) just updates the lives_txt TextField			takeLives(0);		}				//Add an accessor for the lives		public function get Lives(): int		{			return lives;		}				//Add 2 public methods: addPoints and takeLives, each		//taking an amount:int as parameters		public function addPoints(amount:int):void		{			///Add to our internal rep of score			score += amount;			//Update the visual feedback			score_txt.text = "Score: " + score;			trace("Score: " + score);		}		public function takeLives(amount:int):void		{			//Subtract from our internal rep of lives			lives -= amount;			//Update visual feedback			lives_txt.text = "Lives: " + lives;		}	}	}